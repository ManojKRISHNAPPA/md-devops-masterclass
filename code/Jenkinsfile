pipeline{
    agent any
    environment{
        IMAGE_NAME = "manojkrishnappa/md-devops-masterclass:${GIT_COMMIT}"
    }
    stages{
        stage('Git-Checkout'){
            steps{
                git url: 'https://github.com/ManojKRISHNAPPA/md-devops-masterclass.git', branch: 'main'
            }
        }

        stage('Build'){
            steps{
                sh '''
                    printenv
                    pwd
                    cd code/
                    docker build -t ${IMAGE_NAME} .
                '''
            }
        }

        stage('testing the image'){
            steps{
                sh '''
                    // docker kill c1
                    // docker rm c1
                    docker run -it -d --name c1 -p 9001:8501 ${IMAGE_NAME}
                '''
            }
        }
    }
}